{
  "version": 2,
  "builds": [
    {
      "src": "config/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public" 
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)", 
      "dest": "/public/$1"
    },
    {
      "src": "/(?!static/)(.*)", 
      "dest": "config/wsgi.py"
    }
  ]
}
